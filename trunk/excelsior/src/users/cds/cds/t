  IF c=wnd.l_on THEN    IF (x>=w^.sx-stp-2) & (x<w^.sx-2) & (y>=2) & (y<2+stp) THEN      wnd.remove(p^.mode_wnd); icn.remove(p^.mode_icn); RETURN    ELSIF (x>=w^.sx-stp-2) & (x<w^.sx-2) & (y>=2+stp) & (y<2+stp*2) THEN      x:=w^.x; y:=w^.y;      REPEAT wnd.read_point(wnd.rp_move,x,y,w^.sx,w^.sy,c) UNTIL c#0c;      wnd.close(w); w^.x:=x; w^.y:=y; wnd.open(w); RETURN    END;  END;